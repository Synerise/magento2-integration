<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="synerise_update">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to perform Action for selected customers?</message>
                        <title translate="true">Send to Synerise</title>
                    </confirm>
                    <url path="synerise/customer/scheduleMass"/>
                    <type>synerise_update</type>
                    <label translate="true">Send to Synerise</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
