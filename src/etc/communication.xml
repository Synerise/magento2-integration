<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Communication/etc/communication.xsd">
    <topic name="synerise.queue.events" is_synchronous="false" request="string">
        <handler name="processSendEvent" type="Synerise\Integration\Model\MessageQueue\Event\Handler" method="process" />
    </topic>
    <topic name="synerise.queue.updates" is_synchronous="false" request="Synerise\Integration\Model\MessageQueue\Data\Message">
        <handler name="processSendUpdate" type="Synerise\Integration\Model\MessageQueue\Data\Handler" method="process" />
    </topic>
    <topic name="synerise.queue.data.product.batch" is_synchronous="false" request="Magento\AsynchronousOperations\Api\Data\OperationInterface">
        <handler name="processSendProductBatch" type="Synerise\Integration\Model\MessageQueue\Data\ProductBatchHandler" method="process" />
    </topic>
    <topic name="synerise.queue.data.product.range" is_synchronous="false" request="Magento\AsynchronousOperations\Api\Data\OperationInterface">
        <handler name="processSendProductRange" type="Synerise\Integration\Model\MessageQueue\Data\ProductRangeHandler" method="process" />
    </topic>
</config>
